{
  "version": 9,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 1
  },
  "configurePresets": [
    {
      "name": "base-config",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE",

        "CMAKE_C_STANDARD": "11",
        "CMAKE_CXX_STANDARD": "23",
        "BUILD_SHARED_LIBS": false,

        "RND_WARNING_AS_ERROR": true
      }
    },
    {
      "name": "compiler-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "RND_COMPILE_FLAGS": "-Wall;-Wextra;-Wshadow;-Wnon-virtual-dtor;-Wold-style-cast;-Wcast-align;-Wunused;-Woverloaded-virtual;-Wpedantic;-Wconversion;-Wsign-conversion;-Wnull-dereference;-Wdouble-promotion;-Wformat=2;-Wimplicit-fallthrough;-Wno-deprecated-declarations"
      }
    },
    {
      "name": "base-debug",
      "inherits": "base-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "RND_ASSERTS": true,
        "RND_DEBUG_BREAKS": true,
        "RND_VK_VALIDATION_LAYERS": true,
        "RND_VK_DEBUG_UTILS": true
      }
    },
    {
      "name": "base-development",
      "inherits": "base-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "RND_ASSERTS": true,
        "RND_DEBUG_BREAKS": true,
        "RND_VK_VALIDATION_LAYERS": true,
        "RND_VK_DEBUG_UTILS": true
      }
    },
    {
      "name": "base-release",
      "inherits": "base-config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "RND_ASSERTS": false,
        "RND_DEBUG_BREAKS": false,
        "RND_VK_VALIDATION_LAYERS": false,
        "RND_VK_DEBUG_UTILS": false
      }
    },
    {
      "name": "clang-debug",
      "inherits": [ "compiler-clang", "base-debug" ]
    },
    {
      "name": "clang-development",
      "inherits": [ "compiler-clang", "base-development" ]
    },
    {
      "name": "clang-release",
      "inherits": [ "compiler-clang", "base-release" ]
    }
  ],
  "buildPresets": [
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug"
    },
    {
      "name": "clang-development",
      "configurePreset": "clang-development"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release"
    }
  ]
}